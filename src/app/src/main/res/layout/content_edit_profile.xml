<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EditUserProfileActivity"
    tools:showIn="@layout/activity_edit_profile"
    android:id="@+id/content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/labelFirstName"
        android:textColor="#000000"
        android:text="First Name:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:hint="First name..."
        android:layout_marginTop="5dp"
        android:textColorHint="#aaa" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/labelLastName"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:text="Last Name:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastName"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:hint="Last name..."
        android:layout_marginTop="5dp"
        android:textColorHint="#aaa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/labelEmail"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:text="Email:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:hint="john.doe@example.com"
        android:layout_marginTop="5dp"
        android:textColorHint="#aaa" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/labelPhone"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:text="Phone:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:hint="123 555 1234"
        android:layout_marginTop="5dp"
        android:textColorHint="#aaa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/labelAddress"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:text="Address:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address1"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:hint="123 Fake Street"
        android:layout_marginTop="5dp"
        android:textColorHint="#aaa" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address2"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:hint=""
        android:layout_marginTop="5dp"
        android:textColorHint="#aaa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/labelProvince"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:text="State/Province:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/province"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:hint=""
        android:layout_marginTop="5dp"
        android:textColorHint="#aaa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/labelCountry"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:text="Country:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/country"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:hint=""
        android:layout_marginTop="5dp"
        android:textColorHint="#aaa" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/labelPostal"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:text="Postal/Zip Code:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postal"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:hint=""
        android:layout_marginTop="5dp"
        android:textColorHint="#aaa" />

</LinearLayout>