<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_edit_item"
    android:id="@+id/content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textItemName"
        android:textColor="#000000"
        android:text="Item Name:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemName"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textItemName"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textDescription"
        android:layout_below="@+id/itemName"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:text="Description:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textDescription"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/viewPicture"
        android:background="@android:drawable/ic_menu_camera"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/textSubDetail"
        android:layout_above="@+id/subAmount"
        android:textColor="#000000"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"
        android:text="Enter a subscrition amount to have your item highlighted and show higher in the search:" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subAmount"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/subButton"
        android:textColor="#000000"
        android:background="@drawable/rectangle"
        android:layout_marginBottom="5dp"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Subscribe"
        android:id="@+id/subButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#f95f22"
        android:layout_marginBottom="39dp" />


</RelativeLayout>